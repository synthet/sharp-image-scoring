<Application x:Class="ImageGalleryViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ImageGalleryViewer.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <conv:PathToThumbnailConverter x:Key="PathToThumbnail"/>
            <conv:LabelToColorConverter x:Key="LabelToColor"/>
            <conv:ScoreToColorConverter x:Key="ScoreToColor"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

