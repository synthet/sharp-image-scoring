<Window x:Class="ImageGalleryViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ImageGalleryViewer.ViewModels"
        mc:Ignorable="d"
        Title="Image Gallery Viewer" 
        Height="900" Width="1400"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MainWindowStyle}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¸ Image Gallery Viewer" FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ Refresh" Style="{StaticResource PrimaryButton}" 
                            Command="{Binding RefreshCommand}" Margin="0,0,8,0"/>
                    
                    <ComboBox ItemsSource="{Binding SortOptions}" 
                              SelectedIndex="{Binding SelectedSortIndex}"
                              Width="160" Margin="0,0,8,0"/>
                    
                    <ToggleButton IsChecked="{Binding SortDescending}" 
                                  Content="{Binding SortDescending, Converter={x:Null}}"
                                  Width="40">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content" Value="â†“"/>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Content" Value="â†‘"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="200" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Filters -->
            <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Rating Filter -->
                        <Expander Header="â­ Rating Filter" IsExpanded="True" Margin="0,0,0,12">
                            <StackPanel Margin="8,8,0,0">
                                <CheckBox Content="1 Star" IsChecked="{Binding FilterRating1}"/>
                                <CheckBox Content="2 Stars" IsChecked="{Binding FilterRating2}"/>
                                <CheckBox Content="3 Stars" IsChecked="{Binding FilterRating3}"/>
                                <CheckBox Content="4 Stars" IsChecked="{Binding FilterRating4}"/>
                                <CheckBox Content="5 Stars" IsChecked="{Binding FilterRating5}"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Label Filter -->
                        <Expander Header="ðŸ·ï¸ Color Label" IsExpanded="True" Margin="0,0,0,12">
                            <StackPanel Margin="8,8,0,0">
                                <CheckBox Content="ðŸ”´ Red" IsChecked="{Binding FilterLabelRed}"/>
                                <CheckBox Content="ðŸŸ¡ Yellow" IsChecked="{Binding FilterLabelYellow}"/>
                                <CheckBox Content="ðŸŸ¢ Green" IsChecked="{Binding FilterLabelGreen}"/>
                                <CheckBox Content="ðŸ”µ Blue" IsChecked="{Binding FilterLabelBlue}"/>
                                <CheckBox Content="ðŸŸ£ Purple" IsChecked="{Binding FilterLabelPurple}"/>
                                <CheckBox Content="âšª None" IsChecked="{Binding FilterLabelNone}"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Score Filters -->
                        <Expander Header="ðŸ“Š Score Filters" IsExpanded="True" Margin="0,0,0,12">
                            <StackPanel Margin="8,8,0,0">
                                <Label Content="Min General Score"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Value="{Binding MinScoreGeneral}" Minimum="0" Maximum="1" TickFrequency="0.05"/>
                                    <TextBlock Grid.Column="1" Text="{Binding MinScoreGeneral, StringFormat=F2}" 
                                               Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Right"/>
                                </Grid>
                                
                                <Label Content="Min Aesthetic Score" Margin="0,8,0,0"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Value="{Binding MinScoreAesthetic}" Minimum="0" Maximum="1" TickFrequency="0.05"/>
                                    <TextBlock Grid.Column="1" Text="{Binding MinScoreAesthetic, StringFormat=F2}" 
                                               Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Right"/>
                                </Grid>
                                
                                <Label Content="Min Technical Score" Margin="0,8,0,0"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Value="{Binding MinScoreTechnical}" Minimum="0" Maximum="1" TickFrequency="0.05"/>
                                    <TextBlock Grid.Column="1" Text="{Binding MinScoreTechnical, StringFormat=F2}" 
                                               Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Date Filter -->
                        <Expander Header="ðŸ“… Date Range" IsExpanded="False" Margin="0,0,0,12">
                            <StackPanel Margin="8,8,0,0">
                                <Label Content="From"/>
                                <DatePicker SelectedDate="{Binding DateFrom}"/>
                                <Label Content="To" Margin="0,8,0,0"/>
                                <DatePicker SelectedDate="{Binding DateTo}"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Keyword Search -->
                        <Expander Header="ðŸ” Keyword Search" IsExpanded="True" Margin="0,0,0,12">
                            <StackPanel Margin="8,8,0,0">
                                <TextBox Text="{Binding KeywordSearch, UpdateSourceTrigger=PropertyChanged}" 
                                         x:Name="KeywordBox"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Action Buttons -->
                        <StackPanel Margin="0,12,0,0">
                            <Button Content="ðŸ”Ž Apply Filters" Style="{StaticResource PrimaryButton}" 
                                    Command="{Binding ApplyFiltersCommand}" Margin="0,0,0,8"/>
                            <Button Content="â†©ï¸ Reset All" Command="{Binding ResetFiltersCommand}"/>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" 
                          Background="{StaticResource BorderBrush}"/>
            
            <!-- Right Panel: Image Grid -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Pagination Header -->
                <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="â®" Style="{StaticResource PaginationButton}" 
                                    Command="{Binding FirstPageCommand}" IsEnabled="{Binding CanGoBack}"/>
                            <Button Content="â—€" Style="{StaticResource PaginationButton}" 
                                    Command="{Binding PreviousPageCommand}" IsEnabled="{Binding CanGoBack}" Margin="4,0"/>
                            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" 
                                       Margin="12,0" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Button Content="â–¶" Style="{StaticResource PaginationButton}" 
                                    Command="{Binding NextPageCommand}" IsEnabled="{Binding CanGoForward}" Margin="4,0"/>
                            <Button Content="â­" Style="{StaticResource PaginationButton}" 
                                    Command="{Binding LastPageCommand}" IsEnabled="{Binding CanGoForward}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Per page:" VerticalAlignment="Center" Margin="0,0,8,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ComboBox ItemsSource="{Binding PageSizeOptions}" 
                                      SelectedItem="{Binding PageSize}" Width="70"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Image Grid -->
                <ListBox Grid.Row="1" x:Name="ImageGrid"
                         ItemsSource="{Binding Images}"
                         SelectedItem="{Binding SelectedImage}"
                         Style="{StaticResource ImageGridStyle}"
                         ItemContainerStyle="{StaticResource ImageItemStyle}"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ðŸ–¼ï¸ Open in Photos" Command="{Binding OpenInPhotosCommand}"/>
                            <MenuItem Header="ðŸ“‚ Show in Explorer" Command="{Binding OpenInExplorerCommand}"/>
                            <Separator/>
                            <MenuItem Header="ðŸ“‹ Copy Path" Command="{Binding CopyPathCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="150">
                                <!-- Thumbnail with Shell extraction -->
                                <Border Width="140" Height="105" Background="{StaticResource BackgroundLightBrush}"
                                        CornerRadius="2">
                                    <Grid>
                                        <TextBlock Text="ðŸ–¼ï¸" FontSize="32" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" Opacity="0.3"/>
                                        <Image Source="{Binding WindowsPath, Converter={StaticResource PathToThumbnail}}" 
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                        <!-- Label color indicator -->
                                        <Border Width="8" Height="8" CornerRadius="4" 
                                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Margin="4"
                                                Background="{Binding Label, Converter={StaticResource LabelToColor}}"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Info -->
                                <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                           FontSize="11" Margin="0,4,0,0"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding ScoreDisplay}" FontWeight="SemiBold" FontSize="12"
                                               Foreground="{Binding ScoreGeneral, Converter={StaticResource ScoreToColor}}"/>
                                    <TextBlock Text="{Binding RatingDisplay}" Margin="8,0,0,0" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Loading Overlay -->
                <Border Grid.Row="1" Background="#CC000000" Visibility="{Binding IsLoading, Converter={x:Null}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Loading..." FontSize="18" Foreground="White"/>
                    </StackPanel>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Style="{StaticResource StatusBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusText}" Foreground="{StaticResource TextSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“‚ Show in Explorer" Command="{Binding OpenInExplorerCommand}" 
                            Margin="0,0,8,0" Padding="8,4"/>
                    <Button Content="ðŸ–¼ï¸ Open in Photos" Command="{Binding OpenInPhotosCommand}" 
                            Style="{StaticResource PrimaryButton}" Padding="8,4"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
